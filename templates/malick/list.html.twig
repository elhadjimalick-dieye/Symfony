{% extends "base.html.twig" %}

{% block body %}


{% for message in app.flashes ('danger') %}
<div class="alert alert-danger col-sm-5" style=" margin-left: auto;
    margin-right: auto; text-align:center">
    {{ message}}
</div>


{% endfor %}




<h2>liste des employes</h2>
            <button class="btn btn-success ajouter " ><a href="{{path('home')}}" style="color:white">ajouter employ√©</a></button>

<table class="table table-striped table-bordered " id="example" style="width:100%">
    <thead>
        <tr style="background-color:skyblue">
            <th>Matricule</th>
            <th>Prenom Nom</th>
            <th>Date de Naissance</th>
            <th>Salaire</th>
            <th>Service</th>
            <th>Modifier</th>
            <th>Supprimer</th>


        </tr>
    </thead>
    <tbody>


        {% for employer in employers %}

        <tr>
            <td>{{employer.matricule}}</td>
            <td>{{employer.nomcomplet}}</td>
            <td>{{employer.datedenaissance | date('d/m/y')}}</td>
            <td>{{employer.salaire}}</td>
            <td>{{employer.idservice.libelle}}</td>
            <td><button class="btn btn-primary" ><a href="{{path('edit_employer',{'id':employer.id})}}" style="color:white">Modifier</a></button></td>
            <td><button class="btn btn-danger"><a href="/malick/{{employer.id}}/supemp" style="color:white">Supprimer</a></button></td>


        </tr>

        {% endfor %}


    </tbody>
</table>


{% endblock %}